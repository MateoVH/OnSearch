@using Syncfusion.EJ2
@using Syncfusion.EJ2.Schedule

@{
    var dataManager = new DataManager()
            {
                Url = "ScheduleDatas/LoadData",
                Adaptor = "UrlAdaptor",
                CrudUrl = "ScheduleDatas/UpdateData",
                CrossDomain = true
            };
}

<ejs-schedule id="schedule" height="550" selectedDate="new DateTime(2018, 2, 15)">
    <e-schedule-views>
        <e-schedule-view  option="MonthAgenda"></e-schedule-view>
    </e-schedule-views>
    <e-schedule-eventsettings dataSource="dataManager"></e-schedule-eventsettings>
</ejs-schedule>



