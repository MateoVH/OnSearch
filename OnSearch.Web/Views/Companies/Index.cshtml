@model IEnumerable<OnSearch.Web.Entities.Company>

@{
    ViewData["Title"] = "Index";
}



@*<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>*@

<hr />
<body>
    @*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NIT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NIT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                        <button onclick="deleteItem(this)" type="button" data-assigned-id="@item.Id" class="btn btn-danger glyphicon glyphicon-trash" title="Eliminar Registro"></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>


<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
    $(document).ready(function () {

    });
    var id = "";
    function deleteItem(elem) {
        id = $(elem).data('assigned-id');
        //alert(id);
        $("#deleteDialog").modal('show');
    }
    $("#btnNoDelete").click(function () {
        $("#deleteDialog").modal('hide');
        return false;
    });
    $("#btnYesDelete").click(function () {
        window.location.href = '/Companies/Delete/' + id;
    });
    </script>

}
